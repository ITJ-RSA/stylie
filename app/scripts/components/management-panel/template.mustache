<label class="row">
  <span>Name this animation</span>
  <input type="text" class="$saveInput mid" value="My animation">
  <button class="save">Save</button>
</label>
<label class="row">
  <span>Load an animation</span>
  <select class="$loadSelector"></select>
  <button class="load">Load</button>
  <button class="glyphicon glyphicon-remove delete" title="Delete the selected animation."></button>
</label>
<button class="center cta reset-animation" title="Press this button to remove all keyframes start over.">Reset keyframes</button>
