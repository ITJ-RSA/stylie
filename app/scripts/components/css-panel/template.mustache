<label class="row" title="The DOM class name that the generated CSS should target.">
  <span>Class name</span>
  <input class="$className wide update-on-keyup" type="text" value="stylie">
</label>
<fieldset class="vendors">
  <p>Vendors:</p>
  {{#vendors}}
  <label>
    <input class="${{id}}Checkbox update-on-change" type="checkbox" data-vendor="{{id}}">
    <span>{{label}}</span>
  </label>
  {{/vendors}}
</fieldset>
<form class="$orientationForm orientation-form" action="">
  <fieldset>
    <p>Orient generated CSS to:</p>
    <label>
      <input type="radio" name="orientation" value="first-keyframe"{{#orientToFirstKeyframe}}checked{{/orientToFirstKeyframe}}>
      <span>First keyframe</span>
    </label>
    <label>
      <input type="radio" name="orientation" value="top-left" {{^orientToFirstKeyframe}}checked{{/orientToFirstKeyframe}}>
      <span>Top-left of container</span>
    </label>
  </fieldset>
</form>
<fieldset class="row range-container">
  <label title="Drag to the left to generate a smaller CSS output.  Drag to the right to improve animation quality.">
    <span>Output size</span>
    <input
      type="range"
      class="$cssSizeOutput update-on-change"
      min="0"
      max="60"
    >
  </label>
</fieldset>
<label class="row" title="Copy this code and paste it into your stylesheet.">
  <span>Generated CSS</span>
  <textarea class="$generatedCss"></textarea>
</label>
